<launch>
  <!--REFERENCE--> 
  <!-- https://wiki.ros.org/usb_cam -->
  <!-- https://wiki.ros.org/rqt_image_view -->
  <!-- ARGS-->
  <arg name="device_num" default="1" />
  <arg name="cam_device" default="/dev/video$(arg device_num)" />
  <arg name="image_width" default="1280" />
  <arg name="image_height" default="720" />
  <arg name="pixel_format" default="mjpeg" />

  <!--old
<node name="image_view" pkg="image_view" type="image_view" respawn="false" output="screen">
<remap from="image" to="/usb_cam/image_raw" />
</node>
  -->
  <node pkg="rqt_image_view" type="rqt_image_view" name="image_view_debug" args="/debug_img" />

  <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen" >
    <param name="video_device" value="$(arg cam_device)" />
    <param name="image_width" value="$(arg image_width)" />
    <param name="image_height" value="$(arg image_height)" />
    <param name="pixel_format" value="$(arg pixel_format)" />
    <param name="camera_frame_id" value="camera_mono_optical_frame" />
    <param name="io_method" value="userptr"/>
    <param name="sunny_weather" value="false"/>
  </node>
</launch>
