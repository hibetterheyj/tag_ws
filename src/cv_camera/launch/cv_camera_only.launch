<launch>
    <!--REFERENCE-->
    <!-- https://wiki.ros.org/cv_camera -->
    <!-- ARGS-->
    <arg name="device_id" default="0" />
    <arg name="calib_file_path" default="$(find cv_camera)/config/trust_webcam/camera.yaml" />

    <node name="cv_camera" pkg="cv_camera" type="cv_camera_node" output="screen">
        <param name="device_id" value="$(arg device_id)" />
        <param name="camera_info_url" value="$(arg calib_file_path)" />
    </node>

</launch>
